<div class="login-content">
    <h1 class="login-title">Welcome</h1>
    <p class="login-para {{#if message}}alert-danger danger{{/if}}"> {{#if message}}{{message}}{{else}}Please enter your email and password. {{/if}}</p>
    <form action="/login" method="post">
        <!-- Email input -->
        <div class="form-outline mb-4">
            <label class="form-label login-label" for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control form-control-lg" value="{{email}}" />
        </div>
    
        <!-- Password input -->
        <div class="form-outline mb-4">
            <label class="form-label login-label" for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control form-control-lg" value="{{password}}"/>
            <i class="toggle-password bi bi-eye-fill"></i>
        </div>
    
        <div class="d-flex justify-content-between align-items-center mb-4">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="remember-me" name="rememberMe" tabindex="3" />
                <label class="form-check-label" for="remember-me"> Remember Me </label>
            </div>
        </div>
        
        <!-- Submit button -->
        {{!-- <div class="login-submit">
            <div type="submit" class="login-submit login-button">
                Log-in
                <i class="bi bi-chevron-right"></i>
            </div>
            <a href="#" class="btn login-label fs-16">Forgot password?</a>
        </div> --}}
        <div class="login-submit">
            <button class="btn login-submit login-button" type="submit" tabindex="4">
                Sign in
                <i class="bi bi-chevron-right"></i>
            </button>
            <a href="#" class="btn login-label fs-16">Forgot password?</a>
        </div>
        <div class="divider d-flex justify-content-center align-items-center">
            <p class="text-center fw-bold mt-4 text-muted">Or</p>
        </div>
        <div class="divider d-flex justify-content-center align-items-center">
            <img src="../../public/images/gg.png" alt="">
        </div>
</div>
<script>
    const passwordInput = document.getElementById("password");
    const togglePassword = document.querySelector(".toggle-password");
    console.log("hi");
    togglePassword.addEventListener("click", () => {
        passwordInput.classList.toggle("text-form password-form");
        togglePassword.classList.replace("bi-eye-slash-fill bi-eye-fill");
    });
</script>
