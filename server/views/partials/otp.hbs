<div class="login-content">
    <div class="forgot-div-content active-div">
        <h1 class="login-title">OTP Xác Thực</h1>
        <p class="forgot-para {{#if message}}alert-danger danger{{/if}}"> {{#if message}}{{{message}}}{{else}}Nhập vào OTP đã gửi qua email. {{/if}}</p>
        <form action="/otpVerification" method="post">
            <div class="form-outline mb-4">
                <label class="form-label login-label" for="otp">OTP</label>
                <input type="text" id="otp" name="otp" class="form-control form-control-lg" value="" required/>
            </div>
            <div style="display: none;" class="form-outline mb-4">
                <label class="form-label login-label" for="email">email</label>
                <input type="email" id="email" name="email" class="form-control form-control-lg" value="{{email}}" />
            </div>
            <div class="forgot-submit">
                <button class="btn forgot-submit login-button" type="submit" tabindex="4">
                    Xác thực
                    <i class="bi bi-chevron-right"></i>
                </button>
                <a href="/login" class="forgot-label fs-16">Trở về Đăng nhập</a>
            </div>
        </form>
    </div>
</div>
