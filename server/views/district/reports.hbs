<div class="report_table">
  <section class="table__header">
    <h2 class="table_heading">Xử lý báo cáo</h2>
    <div class="input_group">
      <i class='bx bx-search-alt'></i>
      <input type="search" placeholder="Search..." />
    </div>

  </section>
  <section class="tab">
    <div class="tab-bar">
      <button class="tab-btn tab-btn-active" target="req_create">
        Bảng quảng cáo
      </button>
      <button class="tab-btn" target="req_update">Vị trí</button>
    </div>
  </section>
  <section class="table__body">
    <table>
      <!-- Head -->
      <thead>
        <tr>
          <th>Quận</th>
          <th>
            Phường
          </th>
          <th>Địa chỉ</th>
          <th>Mã báo cáo</th>
          <th>
            Hình thức
          </th>
          <th>
            Trạng thái
          </th>
        </tr>
      </thead>
      <!-- Body -->
      <tbody>
        {{#each data_rows}}
        <tr class="{{category}}" id="{{id}}">
          <td>{{address.district}}</td>
          <td>{{address.ward}}</td>
          <td>{{address.street}}</td>
          <td>{{id}}</td>
          <td>{{type}}</td>
          <td onclick="toggleSibling(this)">
            <div class="last-cell">
              <p class="status {{status.status_id}}">{{status.status_name}}</p>
              <i class="bi bi-chevron-down" style="color: black"></i>
            </div>
          </td>
        </tr>
        <tr class="extra" id="{{id}}">
          <td colspan="6" class="expand_row">
            <div class="header">
              <h3>Chi tiết phản ánh</h3>
            </div>

            <div class="feedback-info">
              <div class="label">
                <p>Thông tin phản ánh</p>
              </div>

              <div class="info address">
                <div class="icon-tag">
                  <i class="bi bi-person"></i>
                  <p class="tag">Người gửi</p>
                </div>
                <p class="tag-contetn">{{name}}</p>
              </div>

              <div class="info phone">
                <div class="icon-tag">

                  <i class="bi bi-telephone"></i>
                  <p class="tag">Điện thoại</p>
                </div>
                <p class="tag-contetn">{{phone}}</p>
              </div>

              <div class="info email">
                <div class="icon-tag">

                  <i class="bi bi-envelope-open"></i>
                  <p class="tag">Email</p>
                </div>
                <p class="tag-contetn">{{email}}</p>
              </div>

              <div class="info content_solution">
                <div class="icon-tag">

                  <i class="bi bi-file-text"></i>
                  <p class="tag">Nội dung phản ánh</p>
                </div>
              </div>

              <div class="feedback-content">
                {{content}}
              </div>

              <div class="info img">
                <div class="icon-tag">

                  <i class="bi bi-images"></i>
                  <p class="tag">Hình ảnh</p>
                </div>

              </div>

              <div class="feedback-img">
                {{#each image_path}}
                <img src="{{this}}" alt="Not Found!" />
                {{/each}}
              </div>

            </div>

            <div class="respond-info">
              {{#ifEquals status.status_id "solved"}}

              <div class="feedback-info">
                <div class="label">
                  <p>Thông tin phản hồi</p>
                </div>

                <div class="info phone">
                  <div class="icon-tag">

                    <i class="bi bi-clock"></i>
                    <p class="tag">Thời gian xử lý</p>
                  </div>
                  <p class="tag-content">{{time}}</p>
                </div>

                <div class="info content_solution">
                  <div class="icon-tag">
                    <i class="bi bi-file-text"></i>
                    <p class="tag">Hướng xử lý</p>
                  </div>
                </div>


                <div class="feedback-content">{{{solution}}}</div>
                {{else}}
                <textarea class="report_solotion_area" id="{{id}}" placeholder="Hướng giải quyêt"></textarea>

                {{/ifEquals}}

              </div>

              <div class="button-report-field">
                {{#ifEquals status.status_id "solved"}}
                {{else}}
                <button class="button-report send-report" id="{{id}}" role="button"
                  onclick="updateSolution(this)">Gửi</button>
                {{/ifEquals}}
              </div>

            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </section>
</div>
</body>
