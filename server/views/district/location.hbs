<div class="location_table">
  <section class="table__header">
    <h2 class="table_heading">Quản lý điểm đặt</h2>
    <form class="input_group" action="#" method="post" id="search_functionality">
      <i class='bx bx-search-alt'></i>
      <input id="input-search-hehe" type="search" placeholder="Search..." />
    </form>
  </section>
  <!-- Table head -->
  <section class="table__body">
    <table class="table_in_location">
      <thead class="table_head_in_location">
        <tr class="tr_in_table_in_location">
          <th>Quận</th>
          <th>Phường</th>
          <th>Địa chỉ</th>
          <th>
            <div class="dropdown">
              <a style="color: white !important" href="#"
                class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown"
                aria-expanded="false">Loại vị trí
              </a>
              <div style="padding: 10px" class="dropdown-menu">
                <input type="checkbox" id="dat-cong" name="dat-cong" value="dat-cong" />
                <label for="dat-cong">Đất công</label><br />
                <input type="checkbox" id="hanh-lang-an-toan-giao-thong" name="hanh-lang-an-toan-giao-thong"
                  value="hanh-lang-an-toan-giao-thong" />
                <label for="hanh-lang-an-toan-giao-thong">Hành lang an toàn</label><br />
                <input type="checkbox" id="cong-vien" name="cong-vien" value="cong-vien" />
                <label for="cong-vien">Công viên</label><br />
                <input type="checkbox" id="nha-rieng" name="nha-rieng" value="nha-rieng" />
                <label for="nha-rieng">Nhà riêng</label><br />
              </div>
            </div>
          </th>
          <th class="text-align-center">Số lượng</th>
          <th>
            <div class="dropdown">
              <a style="color: white !important" href="#"
                class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown"
                aria-expanded="false">Mục đích</a>
              <div style="padding: 10px" class="dropdown-menu">
                <input type="checkbox" id="co-dong-chinh-tri" name="co-dong-chinh-tri" value="co-dong-chinh-tri" />
                <label for="co-dong-chinh-tri">Cổ động chính trị</label><br />
                <input type="checkbox" id="quang-cao-thuong-mai" name="quang-cao-thuong-mai"
                  value="quang-cao-thuong-mai" />
                <label for="quang-cao-thuong-mai">Quảng cáo thương mại</label><br />
                <input type="checkbox" id="xa-hoi-hoa" name="xa-hoi-hoa" value="xa-hoi-hoa" />
                <label for="xa-hoi-hoa">Xã hội hoá</label><br />
              </div>
            </div>
          </th>
          <th>
            <div class="dropdown">
              <a style="color: white !important" href="#"
                class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown"
                aria-expanded="false">Trạng thái</a>
              <div style="padding: 10px" class="dropdown-menu">
                <input type="checkbox" id="da-quy-hoach" name="da-quy-hoach" value="da-quy-hoach" />
                <label for="da-quy-hoach">Đã quy hoạch</label><br />
                <input type="checkbox" id="chua-quy-hoach" name="chua-quy-hoach" value="chua-quy-hoach" />
