  <div class="label-table">
    <div class="notification">
      <img src="/public/images/department_lable_nodata.svg" alt="Not found" />
      <h4>Chọn một danh mục để quản lý</h4>
    </div>

    <div class="label-table-header collapse">
      <div class="name-container">
        <p class="header-title" id="name-list-header">Tên danh mục</p>
      </div>
      <div class="description-container">
        <p class="header-title" id="description-header">Mô tả</p>
      </div>
      <div class="created-date-container">
        <p class="header-title" id="created-date-header">Ngày tạo</p>
      </div>
      <div class="label-header-button">
        <button type="button" id="add-row" onclick="addRow(this)">
          <i class="bi bi-plus-circle"></i>
          <p>Thêm dòng</p>
        </button>
      </div>
    </div>
    <div class="label-table-row">
      <div class="name-description">
        <div class="name-content">
          <p class="placeholder "></p>
        </div>
        <div class="description-content">
          <p class="placeholder "></p>
        </div>
      </div>
      <div class="created-date-content">
